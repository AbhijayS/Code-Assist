<div class="container mt-5">
  <div class="row">
    <div class="col-sm-5 text-center">
      <div class="">
        <img src="{{user.pic}}" alt="" width="50%;" class="text-center" style="border-radius: 10px;">
        <p class="lead my-3">Welcome <strong>{{user.username}}</strong></p>
      </div>
    </div>

    <div class="col-sm-7 float-left">
      {{#each error.msg}}
        <div style="margin-bottom: 2rem;" class="alert alert-danger">
          {{this}}
        </div>
      {{/each}}

      {{#each success.msg}}
        <div class="alert alert-success" role="alert">
          {{this}}
        </div>
      {{/each}}

      <div class="container mb-5">
        <h1>Account</h1>
        <hr>

        <div class="form-group">
          <form>
            <div class="row">
              <div class="col mb-2">
                <label for="#last-name"><strong>First</strong></label>
                <input id="first-name" type="text" class="form-control" placeholder="First name" value="{{user.first}}">
              </div>
              <div class="col mb-2">
                <label for="#last-name"><strong>Last</strong></label>
                <input id="last-name" type="text" class="form-control" placeholder="Last name" value="{{user.last}}">
              </div>
            </div>
          </form>
        </div>

        <div class="form-group">
          <label for="#usernameInput"><strong>Username</strong></label>
          <input id="usernameInput" type="text" class="form-control" value="{{user.username}}" aria-label="Username" aria-describedby="basic-addon1">
        </div>

        <div class="form-group">
          <label for="#email-choose"><strong>Email</strong></label>
          <input type="text" class="form-control mb-2" id="emailInput" value="{{user.email}}">
          <input id="email-checkbox" type="checkbox" aria-label="Checkbox for following text input" checked>
          <label for="#email-checkbox" class="text-muted" style="font-size: 14px;">Stay on top of Code Assist email Updates and Notifications!</label>
        </div>
      </div>

      <div class="container mb-5">
        <h1>Change Password</h1>
        <hr>

        <div class="form-group">
          <label for="#oldPass"><strong>Old Password</strong></label>
          <input class="form-control" type="password" name="oldPass" value="">
        </div>

        <div class="form-group">
          <label for="#newPass"><strong>New Password</strong></label>
          <input class="form-control" type="password" name="newPass" value="">
        </div>

        <div class="form-group">
          <label for="#confPass"><strong>Confirm Password</strong></label>
          <input class="form-control" type="password" name="confPass" value="">
        </div>
      </div>

      <div class="container mb-5">
        <h1 class="text-danger">Danger Zone</h1>
        <hr>

        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <label for="#deleteAccount"><p><strong>Remove Account</strong></p></label>
              <p>This action will remove all account data including all Community Posts, Mentor Posts and Shared Projects.</p>
            </div>

            <div class="col-md-6 text-right">
              <button id="deleteAccount" class="btn btn-outline-danger btn-lg d-none d-lg-block">Delete Account</button>

              <button id="deleteAccount" class="btn btn-outline-danger btn-block btn-lg d-lg-none">Delete Account</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<script type="text/javascript" src="/js/account.js"></script>
