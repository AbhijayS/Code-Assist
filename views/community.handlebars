<div class="container" id="community-body">

  <h1 style="font-weight: 200;">Top Searches <img id="filterLoading" src="/images/loadingwheel.gif" style="width: 50px; display: none;"></h1>
  <hr>

  <form id="search-bar">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Search" aria-label="Search Bar" autocomplete="off" id="m">
      <div class="input-group-append">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </div>
    </div>
  </form>

  <div class="d-flex justify-content-between">
    <span class="dropdown">
      <a class="btn btn-primary dropdown-toggle btn-lg" style="border: none;" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Filter By
      </a>

      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="filter dropdown-item" role="menuitem" href="#">Remove Filter</a>
        <a class="filter dropdown-item" role="menuitem" tabindex="-1" href="#">Python</a>
        <a class="filter dropdown-item" role="menuitem" tabindex="-1" href="#">Java</a>
        <a class="filter dropdown-item" role="menuitem" tabindex="-1" href="#">C/C++</a>
        <a class="filter dropdown-item" role="menuitem" tabindex="-1" href="#">HTML</a>
        <a class="filter dropdown-item" role="menuitem" tabindex="-1" href="#">CSS</a>
        <a class="filter dropdown-item" role="menuitem" tabindex="-1" href="#">Javascript</a>
      </div>
    </span>

    <a href="/community/post" class="btn btn-outline-primary btn-lg d-none d-sm-block">Ask your Question</a>
    <a href="/community/post" class="btn btn-outline-primary btn-lg d-sm-none pl-3 pr-4"><i class="fas fa-plus-circle"></i> Post</a>
  </div>

  <ul id="all-post-container" class="list-group list-group-flush my-5">
    <div id="all-posts">
      {{#each posts}}

        <li class="list-group-item list-group-item-action lead" style="font-weight: 400;">
          <div style="font-size: 16px;" class="d-none d-sm-block">
            <p class="text-gray pt-2 my-0">asked <span class="moment-timestamp" style="display: none;">{{this.timestamp}}</span> {{this.author}}</p>
          </div>

          <a href="/community/{{this._id}}">{{this.question}}</a>
          <p>{{this.description}}</p>
          <div class="ml-auto text-right">
            <span class="badge badge-warning badge-pill mr-3">{{this.answers.length}} Answers</span>
            <span class="badge badge-primary badge-pill mr-3">{{this.prog_lang}}</span>
          </div>
        </li>
      {{/each}}
    </div>
  </ul>

</div>

