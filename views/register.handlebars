	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form class="login100-form validate-form" method="post" action="/register">
					<span class="login100-form-title p-b-26" style="font-family: 'Nunito', sans-serif !important;">
						Welcome to
					</span>

					<div class="container text-center">
						<a href="/" id="brand"><h1>Code Assist</h1></a>
					</div>
					<!-- <span class="login100-form-title p-b-48">
						<i class="zmdi zmdi-font"></i>
					</span> -->
					{{#if invalidChars}}
					<div style="margin-bottom: 2rem;" class="alert alert-danger">
						<strong>Username and Email</strong> can only contain alphanumeric characters, period or underscore
					</div>
					{{/if}}

					{{#if usernameTaken}}
						<div style="margin-bottom: 2rem;" class="alert alert-danger">
						  <strong>Username</strong> is taken
						</div>
					{{/if}}

					{{#if emailTaken}}
						<div style="margin-bottom: 2rem;" class="alert alert-danger">
						  <strong>Email</strong> is already registered
						</div>
					{{/if}}

					{{#if notMatch}}
						<div style="margin-bottom: 2rem;" class="alert alert-danger">
							<strong>Passwords</strong> don't match
						</div>
					{{/if}}

					<div class="wrap-input100 validate-input" data-validate = "At least 3 characters">
						{{#if username}}
						<input class="input100 has-val" type="text" name="username" value="{{username}}">
						{{else}}
						<input class="input100" type="text" name="username" autofocus>
						{{/if}}
						<span class="focus-input100" data-placeholder="Username"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Valid email is: a@b.c">
						{{#if email}}
						<input class="input100 has-val" type="text" name="email" value="{{email}}">
						{{else}}
						<input class="input100" type="text" name="email" autofocus>
						{{/if}}
						<span class="focus-input100" data-placeholder="Email"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Valid password: 8 characters">
						<span class="btn-show-pass">
							<i class="zmdi zmdi-eye"></i>
						</span>
						<input class="input100" type="password" name="password">
						<span class="focus-input100" data-placeholder="Password"></span>
					</div>

          <div class="wrap-input100 validate-input" data-validate="Passwords don't match">
            <span class="btn-show-pass">
              <i class="zmdi zmdi-eye"></i>
            </span>
            <input class="input100" type="password" name="password2">
            <span class="focus-input100" data-placeholder="Re-enter Password"></span>
          </div>

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn">
								Register
							</button>
						</div>
					</div>

